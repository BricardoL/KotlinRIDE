<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#416388"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <TextView
        android:id="@+id/nombre_app_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:text="@string/app_name_oficcial"
        android:textAlignment="center"
        android:textColor="#FFFF"
        android:textSize="@dimen/big_size" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_newuser" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_carnetregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#D4CFCC">

        <EditText
            android:id="@+id/et_register_correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#ffff"
            android:layout_margin="20sp"
            android:backgroundTint="#93603D"
            android:hint="Correo institucional UCA"

            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_nombresregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#D4CFCC">
        <EditText
            android:id="@+id/et_nombres_register"
            android:backgroundTint="#93603D"
            android:hint="Nombre completo"
            android:textColor="#ffff"
            android:layout_margin="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_apellidoregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#D4CFCC">

        <EditText
            android:id="@+id/et_apellidos_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20sp"
            android:backgroundTint="#93603D"
            android:hint="Apellidos"
            android:textColor="#ffff" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_cumpleregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#D4CFCC">

        <EditText
            android:id="@+id/et_fecha_cumple_register"
            android:layout_width="match_parent"
            android:backgroundTint="#93603D"
            android:textColor="#ffff"
            android:layout_margin="20sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fecha de nacimiento"
            android:inputType="date" />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_passregister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#D4CFCC">

        <EditText
            android:id="@+id/et_password_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="#ffff"
            android:layout_margin="20sp"
            android:backgroundTint="#93603D"
            android:hint="Crea una contraseña"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:onClick="registerAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#D4CFCC"
        android:background="@drawable/btn_redondo"
        android:layout_margin="@dimen/medium_dimens"
        android:text="@string/txt_registrarse_register"

       />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFF"
        android:textAlignment="center"
        android:text="Al registrarte se te enviará un correo de autenticación, acéptalo para poder iniciar sesión"
        android:gravity="center_horizontal" />

    <ProgressBar
        android:id="@+id/pb_register_register"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        />



</LinearLayout>