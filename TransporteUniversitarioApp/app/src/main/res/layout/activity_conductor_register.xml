<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    tools:context=".ConductorRegisterActivity">

    <TextView
        android:id="@+id/nombre_app_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:textSize="@dimen/big_size"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name_oficcial" />




    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_carnetregister_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary">

        <EditText
            android:id="@+id/et_register_correo_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Correo institucional UCA"
            android:inputType="textEmailAddress" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_nombresregister_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary">
        <EditText
            android:id="@+id/et_nombres_register_c"
            android:hint="Nombre completo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_apellidoregister_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary">

        <EditText
            android:id="@+id/et_apellidos_register_c"
            android:hint="Apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_cumpleregister_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary">

        <EditText
            android:id="@+id/et_fecha_cumple_register_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Fecha de nacimiento"
            android:inputType="date" />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/etl_passregister_c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxStrokeColor="@color/colorPrimary"
        android:textColorHint="@color/colorPrimary">

        <EditText
            android:id="@+id/et_password_register_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Crea una contraseña"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:onClick="registerCondAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_registrarse_register"
        android:layout_margin="@dimen/medium_dimens"
        android:textColor="@drawable/txt_ingconductor"
        android:background="@drawable/ingconductor_btn"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"

        android:text="Al registrarte se te enviará un correo de autenticación, acéptalo para poder iniciar sesión"
        android:gravity="center_horizontal" />

    <ProgressBar
        android:id="@+id/pb_register_register_c"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        />


</LinearLayout>
</layout>